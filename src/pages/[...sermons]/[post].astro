---
import BaseLayout from "@/layouts/BaseLayout.astro";
import StyledText from "@/components/StyledText";
import SermonMediaEmbed from "@/components/SermonMediaEmbed";
import Meta from "@/components/Meta";
import { format as datefnsFormat } from "date-fns";
import { render } from "astro:content";
import { paths } from "@/utils/findPathByType";
import type { GetStaticPaths } from "astro";
import {
  allSermonData,
  siteConfig,
} from "@/data/contentCollectionDataFetching";

// Get static paths
export const getStaticPaths = (async () => {
  return paths.sermons?.path
    ? allSermonData.map((page) => ({
        params: {
          post: `${paths.sermons?.path}/${page.id}`,
        },
        props: {
          page,
        },
      }))
    : [];
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const { title, mediaURL, scripture, date, bulletinURL } = page.data;
const preacher = page.preacher.data.name;
const series = page.series.data.title;

const dateFormatted = datefnsFormat(
  new Date(date.valueOf() + date.getTimezoneOffset() * 60 * 1000),
  "LLL dd, yyyy",
);

const youtube = siteConfig?.data.general.youtube ?? null;
const youtubeFallbackSearch = youtube
  ? `${youtube}/search?query=${dateFormatted}`
  : null;

const { Content: SermonContent } = await render(page);
const { Content: PreacherContent } = await render(page.preacher);
---

<BaseLayout pageTitle={page.data.title}>
  <main class="layout-sermon gap-4 py-8">
    <div class="flex flex-col gap-4">
      <StyledText as="h1" variant="sermonHeading"> {title}</StyledText>
      <Meta
        {date}
        {scripture}
        {preacher}
        {series}
        compact={false}
        linked
        {paths}
        client:load
      />
    </div>

    <div>
      <SermonMediaEmbed
        url={mediaURL}
        title={title}
        youtubeFallbackSearch={youtubeFallbackSearch}
        isCompact={false}
        client:load
      />
    </div>

    <div
      class="prose prose-custom prose-a:hover:decoration-primary prose-a:hover:text-foreground max-w-none"
    >
      {page.rendered?.html ? <SermonContent /> : <PreacherContent />}
      {
        bulletinURL && (
          <a href={bulletinURL} target="_blank" rel="noopener noreferrer">
            View the Bulletin
          </a>
        )
      }
    </div>
  </main>
</BaseLayout>
