---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { StyledText } from "@/components/StyledText";
import SpotifyEmbed from "@/components/SpotifyEmbed";
import Meta from "@/components/Meta";
import { format as datefnsFormat } from "date-fns";
import { marked } from "marked";

import { render, getEntry } from "astro:content";

import { paths } from "@/lib/getMenuItems";

import type { GetStaticPaths } from "astro";
import { getAllSermonData } from "@/lib/posts";

const config = await getEntry("config", "siteconfig");

// Get static paths
export const getStaticPaths = (async () => {
  return paths.sermons?.path
    ? (await getAllSermonData()).map((page) => ({
        params: {
          post: `${paths.sermons?.path}/${page.id}`,
        },
        props: {
          page,
        },
      }))
    : [];
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const {
  data: { title, spotifyURL, scripture, date, bulletinURL },
  preacher: {
    data: { name: preacher, bio },
  },
  series: {
    data: { title: series },
  },
} = page;

const dateFormatted = datefnsFormat(
  new Date(date.valueOf() + date.getTimezoneOffset() * 60 * 1000),
  "LLL dd, yyyy",
);

const { Content } = await render(page);
const preacherBio = bio ? marked.parse(bio) : null;
---

<BaseLayout pageTitle={page.data.title}>
  <main class="layout-base gap-4 py-8">
    <div class="flex flex-col gap-4">
      <StyledText as="h1" variant="displayXL"> {title}</StyledText>
      <Meta
        {date}
        {scripture}
        {preacher}
        {series}
        compact={false}
        linked
        {paths}
        client:load
      />
    </div>

    <div>
      <SpotifyEmbed
        type="video"
        spotifyURL={spotifyURL}
        query={dateFormatted}
        youtubeURL={config?.data.general.youtube}
        client:load
      />
    </div>

    <div
      class="prose prose-custom prose-a:hover:decoration-primary prose-a:hover:text-foreground max-w-none"
    >
      {page.rendered?.html ? <Content /> : <p set:html={preacherBio} />}
      {
        bulletinURL && (
          <a href={bulletinURL} target="_blank" rel="noopener noreferrer">
            View the Bulletin
          </a>
        )
      }
    </div>
  </main>
</BaseLayout>
